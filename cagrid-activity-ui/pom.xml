<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.taverna.t2</groupId>
	<artifactId>cagrid-activity-ui</artifactId>
	<name>Taverna 2 caGrid Activity UI.</name>
	<version>0.3-SNAPSHOT</version>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<t2.platform.version>0.2</t2.platform.version>
		<t2.reference.version>0.2</t2.reference.version>
		
		<t2.core.version>0.4</t2.core.version>
		
		<t2.workbench.version>0.2</t2.workbench.version>
		<t2.workbench.perspective.version>1.9</t2.workbench.perspective.version>
		
		<t2.ui.version>0.4</t2.ui.version>
		<t2.io.version>0.4</t2.io.version>
		<t2.observer.version>0.4</t2.observer.version>
		<t2.partition.version>0.4</t2.partition.version>
		<t2.spidiscovery.version>0.4</t2.spidiscovery.version>
		
		<raven.version>1.9</raven.version>
		<t2.security.version>0.2</t2.security.version>

		<taverna.version>1.7.2.0</taverna.version>

		<t2.activities.version>0.4</t2.activities.version>
	</properties>
	<repositories>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>mygrid-repository</id>
			<name>myGrid Repository</name>
			<url>http://www.mygrid.org.uk/maven/repository</url>
		</repository>
		<repository>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots />
			<id>mygrid-snapshot-repository</id>
			<name>myGrid Snapshot Repository</name>
			<url>http://www.mygrid.org.uk/maven/snapshot-repository</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>net.sf.taverna.t2.workbench</groupId>
			<artifactId>activity-palette-api</artifactId>
			<version>${t2.workbench.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna</groupId>
			<artifactId>wsdl-generic</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2.workbench</groupId>
			<artifactId>contextual-views-impl</artifactId>
			<version>${t2.workbench.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2.workbench</groupId>
			<artifactId>contextual-views-api</artifactId>
			<version>${t2.workbench.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2.workbench</groupId>
			<artifactId>activity-palette-impl</artifactId>
			<version>${t2.workbench.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2.activities</groupId>
			<artifactId>wsdl-activity</artifactId>
			<version>${t2.activities.version}</version>
		</dependency>
		<dependency>
			<groupId>caGrid</groupId>
			<artifactId>caGrid-package</artifactId>
			<version>1.2</version>
		</dependency>
	</dependencies>
</project>